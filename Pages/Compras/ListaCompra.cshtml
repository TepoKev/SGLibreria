@page
@model Compras.ListaCompraModel

@{
    ViewData["Title"] = "Lista de Compras";
}

<!-- DataTales -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Tabla Compras</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <label for="cfechainicio" class="font-weight-bold col-form-label px-3">Fecha Inicio:</label>
            <div class="col-lg-2">
                <input type="date" class="form-control form-control-sm mb-2 col-form" id="cfechainicio">
            </div>
            <label for="cfechafin" class="font-weight-bold col-form-label">Fecha Fin:</label>
            <div class="col-lg-2">
                <input type="date" class="form-control form-control-sm mb-2" id="cfechafin">
            </div>
            <label for="cproveedor" class="col-form-label font-weight-bold ">Proveedor:</label>
            <div class="form-group col-lg-4 " id="cproveedor">
                <select >
                    <option disabled>-- Seleccione --</option>
                    <option value="">Libreria Miriam</option>
                </select>
            </div>
            
        </div>
        <div class="row">
            <label class="col-lg-1">Mostrar </label>
            <select>
                <option value="10">10</option>
                <option value="15">15</option>
                <option value="20">20</option>
                <option value="25">25</option>
            </select>
            <label class="col-lg-2">Registros</label>
            
        </div>
        <div class="table-responsive pt-3">
            <table class="table table-sm table-hover bg-white" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th>Fecha</th>
                        <th>Cantidad</th>
                        <th>Precio Unitario</th>
                        <th>Precio Total</th>
                        <th>Acci√≥n</th>
                    </tr>
                </thead>
                <tbody>
                    
                    <tr>
                        <td>01-03-2019</td>
                    <td>5</td>
                    <td>0.50</td>
                    <td>2.50</td>
                    <td> <a href="#" class="text-info" title="Ver detalle"> <i class="fas fa-list-alt"></i></a></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="row">
            <div class="col offset-5">
                <nav aria-label="Paginacion ">
                    <ul class="pagination">
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Anterior</span>
                            </a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Siguiente</span>
                        </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- End Datatables -->
