@page
@model Empleados.ListaEmpleadoModel

@{
    ViewData["title"] = "Lista de Empleados";
}

<!-- DataTales -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Tabla Empleados</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <label class="col-lg-1 col-form-label">Mostrar </label>
            <select>
                <option value="10">10</option>
                <option value="15">15</option>
                <option value="20">20</option>
                <option value="25">25</option>
            </select>
            <label class="col-lg-2 col-form-label">Registros</label>
            <div class="col offset-7">
                <button type="button" class="btn btn-link" data-toggle="modal" data-target="#exampleModal"><i class="fas fa-cog"></i></button>
            </div>
        </div>
        <div class="table-responsive pt-3">
            <table class="table table-sm table-hover bg-white" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th>Nombre</th>
                        <th>DUI</th>
                        <th>Correo</th>
                        <th>Bitacora</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Empleado in Model.Empleados){
                    <tr>
                        <td>
                            @Empleado.IdPersonaNavigation.Nombres
                            @Empleado.IdPersonaNavigation.Apellidos
                        </td>
                        <td>
                            @Empleado.Dui
                        </td>
                        <td>
                            @Empleado.IdUsuarioNavigation.Correo
                        </td>
                        <td>
                            <a class="btn btn-outline-info" asp-page="/Empleados/BitacoraView"><i class="fas fa-eye"></i> Ver</a>
                        </td>
                        <td><a asp-page="/Empleados/ModificarEmpleado" class="btn btn-outline-info"><i class="fas fa-pencil-alt"></i></a></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="row">
            <div class="col offset-5">
                <nav aria-label="Paginacion">
                    <ul class="pagination">
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Anterior</span>
                            </a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                                <span class="sr-only">Siguiente</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- End Datatables -->
@section modal
{
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">¿Que mostrar en la tabla?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div>
                    <div class="row offset-1">
                        <div class="col-lg-4 form-check">
                            <input type="checkbox" class="form-check-input" id="cbxnombrec" checked>
                            <label class="form-check-label" for="cbxnombrec">Nombre Completo</label>
                        </div>
                        <div class="col-lg-4 form-check">
                            <input type="checkbox" class="form-check-input" id="cbxnombres">
                            <label class="form-check-label" for="cbxnombres">Nombres</label>
                        </div>
                        <div class="col-lg-4 form-check">
                            <input type="checkbox" class="form-check-input" id="cbxapellidos">
                            <label class="form-check-label" for="cbxapellidos">Apellidos</label>
                        </div>
                    </div>
                    <div class="row offset-1">
                        <div class="col-lg-4 form-check">
                            <input type="checkbox" class="form-check-input" id="cbxtelefono">
                            <label class="form-check-label" for="cbxtelefono">Telefono</label>
                        </div>
                        <div class="col-lg-4 form-check">
                            <input type="checkbox" class="form-check-input" id="cbxgenero">
                            <label class="form-check-label" for="cbxgenero">Género</label>
                        </div>
                        <div class="col-lg-4 form-check">
                            <input type="checkbox" class="form-check-input" id="cbxdireccion">
                            <label class="form-check-label" for="cbxdireccion">Dirección</label>
                        </div>
                    </div>
                    <div class="row offset-1">
                        <div class="col-lg-4 form-check">
                            <input type="checkbox" class="form-check-input" id="cbxfechnac">
                            <label class="form-check-label" for="cbxtelefono">Fecha de Nacimiento</label>
                        </div>
                        <div class="col-lg-4 form-check">
                            <input type="checkbox" class="form-check-input" id="cbxgenero">
                            <label class="form-check-label" for="cbxfeching">Fecha de Ingreso</label>
                        </div>
                        <div class="col-lg-4 form-check">
                            <input type="checkbox" class="form-check-input" id="cbxdui" checked>
                            <label class="form-check-label" for="cbxdui">DUI</label>
                        </div>
                    </div>
                    <div class="row offset-1">
                        <div class="col-lg-4 form-check">
                            <input type="checkbox" class="form-check-input" id="cbxfechsal">
                            <label class="form-check-label" for="cbxtelefono">Fecha de Salida</label>
                        </div>
                        <div class="col-lg-4 form-check">
                            <input type="checkbox" class="form-check-input" id="cbxsalario">
                            <label class="form-check-label" for="cbxcbxsalario">Salario</label>
                        </div>
                        <div class="col-lg-4 form-check">
                            <input type="checkbox" class="form-check-input" id="cbxusuario">
                            <label class="form-check-label" for="cbxusuario">Usuario</label>
                        </div>
                    </div>
                    <div class="row offset-1">
                        <div class="col-lg-4 form-check">
                            <input type="checkbox" class="form-check-input" id="cbxprivilegio">
                            <label class="form-check-label" for="cbxprivilegio">Privilegio</label>
                        </div>
                        <div class="col-lg-4 form-check">
                            <input type="checkbox" class="form-check-input" id="cbxcorreo" checked>
                            <label class="form-check-label" for="cbxcorreo">Correo</label>
                        </div>
                        <div class="col-lg-4 form-check">
                            <input type="checkbox" class="form-check-input" id="cbxestado">
                            <label class="form-check-label" for="cbxestado">Estado</label>
                        </div>
                    </div>
                    <div class="row offset-1">
                        <div class="col-lg-4 form-check">
                            <input type="checkbox" class="form-check-input" id="cbxclave">
                            <label class="form-check-label" for="cbxclave">Clave</label>
                        </div>
                        <div class="col-lg-4 form-check">
                            <input type="checkbox" class="form-check-input" id="cbxbitacora" checked>
                            <label class="form-check-label" for="cbxbitacora">Bitacora</label>
                        </div>
                    </div>
                </div>
                <div class="border-top">
                    <div class="row">
                        <label class="col-lg-4 offset-5 col-form-label">Orden</label>
                    </div>
                    <div class="row">
                        <label class="offset-1 col-form-label">Nombre, DUI, Email, Bitacora</label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary">Aplicar Cambios</button>
            </div>
        </div>
    </div>
</div>
}
@section Scripts
{
    <link href="~/selectric/src/selectric.css" rel="stylesheet">
    <script src="~/selectric/src/jquery.selectric.js"></script>
    <script>
        $(function () {
            $('select').selectric();
        });
    </script>
}