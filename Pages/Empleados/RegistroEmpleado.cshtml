@page
@model Empleados.RegistroEmpleadoModel

@{
    ViewData["title"] = "Registro de Empleado";
}
<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-white">
            <li class="breadcrumb-item" aria-current="page"><a href="#">Empleado</a></li>
            <li class="breadcrumb-item" id="lUsuario">Usuario</li>
        </ol>
    </nav>
</div>
<form class="col-lg-10 offset-lg-1 rounded py-4 border border-secondary-100" method="post" style="background-color: rgba(103, 230, 220,.9); color: white;">
    <div id="divFormulario">
        <div class="row">
            <h2 class="offset-4 pb-4">Datos del Empleado</h2>
        </div>
        <div class="form-group row">
            <div class="col">
                <div class="row">
                    <label asp-for="Persona.Nombres" class="col-lg-1 offset-1 col-form-label font-weight-bold"></label>
                    <div class="col-lg-9 offset-1 pl-3">
                        <input class="form-control mb-2" asp-for="Persona.Nombres" placeholder="Digite sus nombres">
                    </div>
                </div>
            </div>
            <div class="form-group col">
                <div class="row">
                    <label asp-for="Persona.Apellidos" class="col-lg-1 col-form-label font-weight-bold"></label>
                    <div class="col-lg-9 offset-1 pl-3">
                        <input class="form-control mb-2" asp-for="Persona.Apellidos" placeholder="Digite sus nombres">
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <div class="row">
                    <label asp-for="Persona.Genero" class="col-lg-1 offset-1 col-form-label font-weight-bold"></label>
                    <div class="col-lg-9 offset-1 pl-3">
                        <select class="custom-options">
                            <option value="">Seleccione...</option>
                            <option value="0">Femenino</option>
                            <option value="1">Masculino</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="row">
                    <label asp-for="Persona.Telefono" class="col-lg-1 col-form-label font-weight-bold"></label>
                    <div class="form-group col-lg-9 offset-1 pl-3">
                        <input class="form-control form-control-user mb-2" asp-for="Persona.Telefono" placeholder="####-####">
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <label asp-for="Persona.Direccion" class="col-lg-1 col-form-label font-weight-bold"></label>
            <div class="col-lg-10">
                <textarea asp-for="Persona.Direccion" class="form-control form-control-user" placeholder="Col campos II, Barrio Los Angeles, Apastepeque, San Vicente" style="height: 100px;"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <div class="row">
                    <label asp-for="Empleado.Dui" class="col-lg-1 offset-1 col-form-label font-weight-bold"></label>
                    <div class="col-lg-9 offset-1 pl-3">
                        <input class="form-control mb-2" asp-for="Empleado.Dui" placeholder="########-#">
                    </div>
                </div>
            </div>
            <div class="form-group col">
                <div class="row">
                    <label asp-for="Empleado.Salario" class="col-lg-1 col-form-label font-weight-bold"></label>
                    <div class="col-lg-9 offset-1 pl-3">
                        <input class="form-control mb-2" asp-for="Empleado.Salario" placeholder="#.#">
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <div class="row">
                    <label asp-for="Empleado.FechaNacimiento" class="col-lg-3 offset-1 col-form-label font-weight-bold"></label>
                    <div class="col-lg-7 offset-1">
                        <input class="form-control mb-2" asp-for="Empleado.FechaNacimiento" placeholder="dd/MM/yyyy">
                    </div>
                </div>
            </div>
            <div class="form-group col">
                <div class="row">
                    <label asp-for="Empleado.FechaIngreso" class="col-lg-3 col-form-label font-weight-bold"></label>
                    <div class="col-lg-7 offset-1">
                        <input class="form-control mb-2" asp-for="Empleado.FechaIngreso" placeholder="dd/MM/yyyy">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row pt-3">
        <div class="col-lg-3 offset-5">
            <button class="btn btn-outline-primary" id="SiguienteP"><i class="fas fa-arrow-circle-right"></i> Siguiente</button>
        </div>
    </div>
</form>

@section Scripts{
    <link href="~/selectric/src/selectric.css" rel="stylesheet">
    <script src="~/selectric/src/jquery.selectric.js"></script>
    <script>
        var gens = [
            {elemento: '', texto:'Seleccione'},
            {elemento: '<i class="fas fa-female"></i>', texto:'Femenino'},
            {elemento: '<i class="fas fa-male"></i>', texto:'Masculino'}
        ];
        $('.custom-options').selectric({
            optionsItemBuilder: function(itemData, element, index) {
                return '<span class="h6">'+gens[index].elemento+' '+gens[index].texto+'</span>';
            }
        });
        $(function () {
            $('#SiguienteP').on('click', function () {
                $('#divFormulario').load('/RegistroEmpleado?handler=UsuarioPartial');
            });
        });
    </script>
}