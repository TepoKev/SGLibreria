@page
@model Empleados.RegistroEmpleadoModel
@{
ViewData["title"] = "Registro de Empleado";
}
<div class="row">
    <form class="col-lg-8 offset-2 rounded py-3 pr-5 border border-secondary-100" method="post" id="formEUP">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div id="FormEmpleado" class="ml-4">
            <div class="row">
                <h4 class="offset-4 pb-3">Datos Personales</h4>
            </div>
            <div class="form-group row ">
                <div class="col">
                    <label asp-for="Persona.Nombres" class="font-weight-bold"></label>
                    <input class="form-control" asp-for="Persona.Nombres" placeholder="Digite sus nombres">
                    <span asp-validation-for="Persona.Nombres" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Persona.Apellidos" class="font-weight-bold"></label>
                    <input class="form-control" asp-for="Persona.Apellidos" placeholder="Digite sus nombres">
                    <span asp-validation-for="Persona.Apellidos" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <label asp-for="Persona.Genero" class="font-weight-bold"></label>
                    <select asp-for="Persona.Genero" class="custom-options">
                        <option value="">Seleccione...</option>
                        <option value="0">Femenino</option>
                        <option value="1">Masculino</option>
                    </select>
                    <span asp-validation-for="Persona.Genero" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Persona.Telefono" class="font-weight-bold"></label>
                    <input class="form-control form-control-user" asp-for="Persona.Telefono"
                        placeholder="####-####">
                    <span asp-validation-for="Persona.Telefono" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-9">
                    <label asp-for="Persona.Direccion" class="font-weight-bold"></label>
                    <textarea asp-for="Persona.Direccion" class="form-control"
                        placeholder="Col campos II, Barrio Los Angeles, Apastepeque, San Vicente"
                        style="height: 100px;"></textarea>
                    <span asp-validation-for="Persona.Direccion" class="text-danger"></span>
                </div>
                <div class="col-lg-3">
                    <label asp-for="Empleado.Dui" class="font-weight-bold"></label>
                    <input class="form-control" asp-for="Empleado.Dui" placeholder="########-#">
                    <span asp-validation-for="Empleado.Dui" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <label asp-for="Empleado.FechaNacimiento" class="font-weight-bold"></label>
                    <input class="form-control" asp-for="Empleado.FechaNacimiento" placeholder="dd/MM/yyyy">
                    <span asp-validation-for="Empleado.FechaNacimiento" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Empleado.FechaIngreso" class="font-weight-bold"></label>
                    <input class="form-control" asp-for="Empleado.FechaIngreso" placeholder="dd/MM/yyyy">
                    <span asp-validation-for="Empleado.FechaIngreso" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div id="FormUsuario">
            <div class="row ml-4">
                <h4 class="offset-4">Datos de Usuario</h4>
            </div>
            <div class="row ml-4">
                <div class="col-lg-5">
                    <div class="form-group row">
                        <label asp-for="Usuario.Nombre" class="font-weight-bold"></label>
                        <input class="form-control" asp-for="Usuario.Nombre" placeholder="Digite su nombre de usuario">
                        <span asp-validation-for="Usuario.Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Usuario.Correo" class="font-weight-bold"></label>
                        <input class="form-control" asp-for="Usuario.Correo" placeholder="ejemplo@dominio.com">
                        <span asp-validation-for="Usuario.Correo" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Usuario.Privilegio" class="font-weight-bold mr-3"></label>
                        <select asp-for="Usuario.Privilegio">
                            <option value="">Seleccione...</option>
                            <option value="0">Vendedor</option>
                            <option value="1">Administrador</option>
                        </select>
                        <span asp-validation-for="Usuario.Privilegio" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Usuario.Clave" class="font-weight-bold"></label>
                        <input class="form-control" type="password" asp-for="Usuario.Clave"
                            placeholder="Digite su contraseña">
                        <span asp-validation-for="Usuario.Clave" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label class="font-weight-bold">Repetir</label>
                        <input class="form-control" type="password" id="claverepeat" placeholder="Repita su contraseña">
                        <span id="valcontra" class="text-danger" hidden>Las contraseñas no coinciden</span>
                    </div>
                </div>
                <div class="col-lg-7 pt-5">
                    <div class="form-group row offset-3 text-center">
                        <img src="~/img/blank-profile.png" alt="..." class="img-thumbnail rounded-circle" height="80%;"
                            width="80%;">
                    </div>
                    <div class="form-group offset-1">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="pdimagen">
                            <label class="custom-file-label" name="pdimagen" for="pdimagen">Seleccione..</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row pt-3">
            <button type="submit" class="btn btn-outline-primary offset-5" id="process"><i class="fas fa-save"></i> Registrar</button>
        </div>
    </form>
    <div class="col-lg-2">
        <div class="toast" style="position: absolute; z-index: 1" id="toastProveedor" data-delay="5000" role="alert"
            aria-live="assertive" aria-atomic="true">
            <div class="" id="notific">
                <label class="col-form-label text-white">
                    <i class="fas fa-check-circle"></i>
                    <strong class="mr-auto">Registro Empleado</strong>
                </label>
                <button type="button" class="close" data-dismiss="toast" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="toast-body" id="mensaje">
            </div>
        </div>
    </div>
</div>
@section Scripts
{
<link href="~/selectric/src/selectric.css" rel="stylesheet">
<script src="~/selectric/src/jquery.selectric.js"></script>
<script>
    $(function () {
        $('select').selectric();
    });
    var gens = [{
            elemento: '',
            texto: 'Seleccione'
        },
        {
            elemento: '<i class="fas fa-female"></i>',
            texto: 'Femenino'
        },
        {
            elemento: '<i class="fas fa-male"></i>',
            texto: 'Masculino'
        }
    ];
    $('.custom-options').selectric({
        optionsItemBuilder: function (itemData, element, index) {
            return '<span class="h6">' + gens[index].elemento + ' ' + gens[index].texto + '</span>';
        }
    });
    var frmEUP = document.querySelector("#formEUP");
    var inputRC = document.querySelector("#claverepeat");
    inputRC.addEventListener("input", ()=>{
        document.querySelector("#valcontra").setAttribute("hidden","");
    });
    inputRC.addEventListener("blur", ()=>{
        if(!ClaveCoincide()){
            document.querySelector("#valcontra").removeAttribute("hidden");
        }
    });
    frmEUP.addEventListener("submit", (e) => {
        e.preventDefault();
        //Aqui se va a enviar el Formulario al servidor via ajax
        if(ClaveCoincide()){
            let form = new FormData(document.querySelector("#formEUP"));
            var xhttp = new XMLHttpRequest();
            xhttp.onreadystatechange = function () {
                if (this.readyState == 4 && this.status == 200) {
                    document.querySelector("#formEUP").reset();
                    window.scrollTo(0,0);
                    document.querySelector("#notific").className = "toast-header bg-success";
                    document.querySelector("#mensaje").innerHTML = "Registro exitoso !";
                    $('.toast').toast('show');
                }
                if (this.readyState == 4 && this.status == 404) {
                    document.querySelector("#notific").className = "toast-header bg-danger";
                    document.querySelector("#mensaje").innerHTML = "Error al registrar !";
                    $('.toast').toast('show');
                }
            };
            xhttp.open("POST", "RegistroEmpleado", true);
            xhttp.setRequestHeader("Content-type", "application/x-www-form-urlencoded");
            var inputToken = document.getElementsByName("__RequestVerificationToken");
            xhttp.setRequestHeader("RequestVerificationToken", inputToken[0].value);
            xhttp.send(new URLSearchParams(form));
        }else{
            document.querySelector("#valcontra").removeAttribute("hidden");
        }
    });
    function ClaveCoincide(){
        var input1 =  document.querySelector("#Usuario_Clave").value;
        var input2 =  document.querySelector("#claverepeat").value;
        if(input1 === input2){
            return true
        }else{
            return false;
        }
    }
</script>
}