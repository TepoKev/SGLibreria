@page
@model Ofertas.RegistroOfertaModel;
@using SGLibreria.Models;
@{
    ViewData["Title"] = "Registro Ofertas";
}
<form class="container-fluid ">
    <div class="user" method="post">
        <div class="row">
            <div class="col-lg-10 offset-lg-1 border border-secondary-100 rounded">
                <div class="row">
                    <div class="col-lg-7">
                        <h5 class="text-lg-left p-2">Datos</h5>
                    </div>
                </div>
                <div class="form-group bg-white rounded">
                    <div class=" row  m-2 pt-2 rounded">
                        <label for="odescuento" class=" col-lg-2 font-weight-bold col-form-label">% Descuento</label>
                        <div class="col-lg-3">
                            <input type="number" value="15" class="form-control form-control-user mb-2" id="odescuento" >
                        </div>
                    </div>
                    <div class=" row  m-2 rounded">
                        <label for="cfechainicio" class="col-lg-2 font-weight-bold col-form-label">Fecha Inicio</label>
                        <div class="col-lg-3">
                            <input type="date" class="form-control form-control-user mb-2" id="cfechainicio">
                        </div>
                        <label for="cfechafin" class=" col-lg-2 font-weight-bold col-form-label">Fecha Fin</label>
                        <div class="col-lg-3">
                            <input type="date" class="form-control form-control-user mb-2" id="cfechafin">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!---->
        <br>
        <div class="row">
            <div class="col-lg-10 offset-lg-1 border border-secondary-100 rounded">
                <div class="row">
                    <div class="col-lg-9">
                        <h5 class="text-lg-left p-2">Detalles</h5>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group pt-2">
                            <button type="button" class="btn btn-outline-primary" data-toggle="modal"
                                data-target="#producto" name="AgregarProducto">Añadir Producto</button>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <table class="table table-sm table-hover bg-white" name="TablaVenta">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">Nombre</th>
                                    <th scope="col">Marca</th>
                                    <th scope="col">Categoria</th>
                                    <th scope="col">Precio</th>
                                    <th scope="col">Acción</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Cuaderno</td>
                                    <td>Norma</td>
                                    <td>Cuadernos</td>
                                    <td>$ 1.00</td>
                                    <td ><a href="#" class="text-danger font-weight-bold" title="Eliminar"><i class="fas fa-trash"></i></a></td>
                                </tr>
                                <tr>
                                    <td>Cartulina</td>
                                    <td>---</td>
                                    <td>Papeleria</td>
                                    <td>$ 0.75</td>
                                    <td ><a href="#" class="text-danger font-weight-bold" title="Eliminar"><i class="fas fa-trash"></i></a></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class=" offset-lg-5 col-lg-6">
                <div class="form-group pt-2">
                    <button type="button" class="btn btn-outline-primary"><i class="fas fa-save"> </i> Registrar</button>
                    <button type="button" class="btn btn-outline-secondary"><i class="fas fa-times-circle">
                            </i> Cerrar</button>
                </div>
            </div>
        </div>
    </div>
    <!--    Inicia Modal Inventario-->
    <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
        aria-hidden="true" id="producto">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h4 class="modal-title" id="modalInventario">Productos</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form class="form-group">
                        <div class="row">
                            <div class=" search-box">
                                <input type="text" class="search-txt" placeholder="Buscar..." />
                                <a class="search-btn" href="#">
                                    <i class="fas fa-search"></i>
                                </a>
                            </div>
                            <div class="offset-lg-10 col-lg-3 form-control-user px-5">
                                <button type="button" class="btn btn-outline-success"><i class="fas fa-cart-plus"></i>Agregar</button>
                            </div>
                        </div>
                        <div class="offset-lg-1 row px-5 py-3 align-content-center">
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <button type="button" class="btn btn-dark">Papelería</button>
                                <button type="button" class="btn btn-dark">Cuadernos</button>
                                <button type="button" class="btn btn-dark">Novelas</button>
                                <button type="button" class="btn btn-dark">Utilería</button>
                                <button type="button" class="btn btn-dark">Geometria</button>
                                <button type="button" class="btn btn-dark">Colores</button>
                                <button type="button" class="btn btn-dark">Tijeras</button>
                                <button type="button" class="btn btn-dark">Correctores</button>
                                <button type="button" class="btn btn-dark">Tirros</button>
                            </div>
                        </div>
                        <div class="row" style='margin-top:-15px;margin-bottom:100px;'>
                            <div class="col-lg-12" id='productos'>
                                <div class="mt-2">
                                @{
                                    Producto obj;
                                    int i,j;
                                }
                                @for ( i = 0; i < Model.Productos.Count; i++) {
                                    <div class="card-group">
                                    @for( j = 0;j < 6 && i<Model.Productos.Count; j++) {
                                        obj = Model.Productos[i+j];
                                    <div class="card">
                                        <div class="card-title mt-3 mx-2">
                                            <h5 class="m-0 p-0">@obj.Nombre<span class="badge badge-primary">50</span></h5>
                                        </div>
                                        <div class="card-img-top">
                                            <img src="@obj.IdImagenNavigation.Nombre" class="img-fluid" alt="...">
                                        </div>
                                        <div class="card-body">
                                            <p class="card-text"></p>
                                        </div>
                                        <div class="card-footer">
                                            <small class="font-weight-bold text-primary h6">Precio: $0.25</small>
                                        </div>
                                    </div>
                                    }
                                    </div>
                                    i = i + j -1;
                                }
                                    @for ( i = Model.Productos.Count-1; i >=0 ; i--) {
                                    <div class="card-group">
                                        @for( j = 0;j < 6 && i>=0; j++) {
                                        obj = Model.Productos[i-j];
                                        <div class="card">
                                            <div class="card-title mt-3 mx-2">
                                                <h5 class="m-0 p-0">@obj.Nombre<span class="badge badge-primary">50</span></h5>
                                            </div>
                                        <div class="card-img-top">
                                            <img src="@obj.IdImagenNavigation.Nombre" class="img-fluid" alt="...">
                                        </div>
                                        <div class="card-body">
                                            <p class="card-text"></p>
                                        </div>
                                            <div class="card-footer">
                                                <small class="font-weight-bold text-primary h6">Precio: $0.25</small>
                                            </div>
                                        </div>
                                    }
                                    </div>
                                    i = i - j +1;
                                }
                                </div><!-- .mt-2-->
                            </div><!-- #productos -->
                                <!--columna de productos-->
                        </div>
                        <div class="row">
                            <div class="col offset-5">
                                <nav aria-label="Paginacion ">
                                    <ul class="pagination">
                                        <li class="page-item">
                                            <a class="page-link" href="#" aria-label="Previous">
                                                <span aria-hidden="true">&laquo;</span>
                                                <span class="sr-only">Anterior</span>
                                            </a>
                                        </li>
                                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                                        <li class="page-item">
                                        <a class="page-link" href="#" aria-label="Next">
                                            <span aria-hidden="true">&raquo;</span>
                                            <span class="sr-only">Siguiente</span>
                                        </a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link href="~/selectric/src/selectric.css" rel="stylesheet">
    <script src="~/selectric/src/jquery.selectric.js"></script>
    <script>
        $(function() {
            $('select').selectric();
        });
    </script>
}