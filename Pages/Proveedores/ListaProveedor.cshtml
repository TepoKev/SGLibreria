@page
@model Proveedores.ListaProveedorModel

@{
    ViewData["Title"] = "Lista Proveedores";
}
<!-- DataTales -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Tabla Proveedores</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <label class="offset-6  m-0 pr-1 pt-2">Mostrar </label>
            <select class="form-control col-lg-1">
                <option>5</option>
                <option>10</option>
                <option>15</option>
                <option>20</option>
                <option>25</option>
            </select>
            <label class="col m-0 pt-2">Registros</label>
        </div>
        <div class="table-responsive pt-3">
            <table class="table table-sm table-hover bg-white" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th>Nombre</th>
                        <th>Direccion</th>
                        <th>Telefono</th>
                        <th>Email</th>
                        <th>Estado</th>
                        <th>Web</th>
                        <th>Editar</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 0;
                    }
                    @foreach (var item in Model.Proveedor)
                    {
                        <tr>
                            <td>@Html.DisplayFor(x => item.Nombre)</td>
                            <td>@Html.DisplayFor(x => item.Direccion)</td>
                            <td>@Html.DisplayFor(x => item.Telefono)</td>
                            <td>@Html.DisplayFor(x => item.Correo)</td>
                            @if(item.Estado == 1){
                            <td>@Html.Raw("<div class=\"custom-control custom-switch\"><input type=\"checkbox\" class=\"custom-control-input\" id=\"customSwitch"+i+"\" checked><label class=\"custom-control-label\" for=\"customSwitch"+i+"\">Activo</label></div>")</td>
                            }else{
                                if(item.Estado == 0){
                                    <td>@Html.Raw("<div class=\"custom-control custom-switch\"><input type=\"checkbox\" class=\"custom-control-input\" id=\"customSwitch"+i+"\"><label class=\"custom-control-label\" for=\"customSwitch"+i+"\">Inactivo</label></div>")</td>
                                }else{
                                    <td></td>
                                }
                            }
                            @if(item.Enlace != "" && item.Enlace != null){
                            <td>@Html.Raw("<a href=\""+item.Enlace+"\" target=\"_blank\"><button class=\"btn btn-outline-success\">Ir</button></a>")</td>
                            }else{
                                <td></td>
                            }
                            <td>
                                <a asp-page="/Proveedores/ModificarProveedor" asp-route-id="@item.Id">
                                    <button class="btn btn-outline-success">
                                        <i class="fas fa-pencil-alt"></i>
                                    </button>
                                </a>
                            </td>
                        </tr>
                        i++;
                    }
                </tbody>
            </table>
        </div>
        <div class="row">
            <div class="col offset-5">
                <nav aria-label="Paginacion ">
                    <ul class="pagination">
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Anterior</span>
                            </a>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Siguiente</span>
                        </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- End Datatables -->
<script>
$('.custom-options').selectric({
    optionsItemBuilder: function(itemData, element, index) {
        return element.val().length ? '<span class="ico ico-' + element.val() +  '"></span>' + itemData.text : itemData.text;
    }
});
</script>