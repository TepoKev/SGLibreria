@page
@model Proveedores.ListaProveedorModel

@{
    ViewData["Title"] = "Lista de Proveedores";
}
<!-- DataTales -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Datos</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <label class="col-lg-1 col-form-label">Mostrar </label>
            <select>
                <option value="10">10</option>
                <option value="15">15</option>
                <option value="20">20</option>
                <option value="25">25</option>
            </select>
            <label class="col-lg-2 col-form-label">Registros</label>
        </div>
        <div class="table-responsive pt-3">
            <table class="table table-sm table-hover bg-white" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th>Nombre</th>
                        <th>Direccion</th>
                        <th>Telefono</th>
                        <th>Correo</th>
                        <th>Estado</th>
                        <th>Web</th>
                        <th>Editar</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 0;
                    }
                    @foreach (var item in Model.Proveedor)
                    {
                        <tr>
                            <td>@Html.DisplayFor(x => item.Nombre)</td>
                            <td>@Html.DisplayFor(x => item.Direccion)</td>
                            <td>@Html.DisplayFor(x => item.Telefono)</td>
                            <td>@Html.DisplayFor(x => item.Correo)</td>
                            @if(item.Estado == 1){
                            <td>@Html.Raw("<div class=\"custom-control custom-switch\"><input type=\"checkbox\" class=\"custom-control-input\" id=\"customSwitch"+i+"\" checked><label class=\"custom-control-label\" for=\"customSwitch"+i+"\">Activo</label></div>")</td>
                            }else{
                                if(item.Estado == 0){
                                    <td>@Html.Raw("<div class=\"custom-control custom-switch\"><input type=\"checkbox\" class=\"custom-control-input\" id=\"customSwitch"+i+"\"><label class=\"custom-control-label\" for=\"customSwitch"+i+"\">Inactivo</label></div>")</td>
                                }else{
                                    <td></td>
                                }
                            }
                            @if(item.Enlace != "" && item.Enlace != null){
                            <td>@Html.Raw("<a href=\""+item.Enlace+"\" target=\"_blank\"><button class=\"btn btn-outline-success\">Ir</button></a>")</td>
                            }else{
                                <td></td>
                            }
                            <td>
                                <a class="btn btn-outline-success" asp-page="/Proveedores/ModificarProveedor" asp-route-id="@item.Id">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                            </td>
                        </tr>
                        i++;
                    }
                </tbody>
            </table>
        </div>
        <div class="row">
            <div class="col offset-5">
                <nav aria-label="Paginacion ">
                    <ul class="pagination">
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Anterior</span>
                            </a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Siguiente</span>
                        </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- End Datatables -->
@section Scripts{
    <link href="~/selectric/src/selectric.css" rel="stylesheet">
    <script src="~/selectric/src/jquery.selectric.js"></script>
    <script>
        $(function() {
            $('select').selectric();
        });
    </script>
    <script>
        var InputCheck = document.getElementsByClassName("custom-control-input");
        for(var i = 0 ; i < InputCheck.length ; i++ )
        {
            InputCheck[i].addEventListener("click", procesar);
        }
        function procesar(e) {
            var Check = e.currentTarget;
            var Label = Check.nextSibling;
            if(Check.checked){
                Label.innerHTML = "Activo";
            }else{
                Label.innerHTML = "Inactivo";
            }
        }
    </script>
}