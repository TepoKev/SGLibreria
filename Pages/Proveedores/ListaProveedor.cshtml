@page
@model Proveedores.ListaProveedorModel

@{
    ViewData["Title"] = "Lista de Proveedores";
}
<!-- DataTales -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Datos</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <label class="col-lg-1 col-form-label">Mostrar </label>
            <select>
                <option value="10">10</option>
                <option value="15">15</option>
                <option value="20">20</option>
                <option value="25">25</option>
            </select>
            <label class="col-lg-2 col-form-label">Registros</label>
        </div>
        <div class="table-responsive pt-3">
            <table class="table table-sm table-hover bg-white" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th>Nombre</th>
                        <th>Direccion</th>
                        <th>Telefonos</th>
                        <th>Correo</th>
                        <th>Estado</th>
                        <th>Web</th>
                        <th>Editar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Proveedor)
                    {
                        <tr>
                            <td>
                                <label class="col-form-label">
                                    @Html.DisplayFor(x => item.Nombre)
                                </label>
                            </td>
                            <td>
                                <label class="col-form-label">
                                    @Html.DisplayFor(x => item.Direccion)
                                </label>
                            </td>
                            <td>
                                @foreach(var tel in item.Telefono){
                                    if(tel.Principal == 1){
                                        <label class="row col-form-label">
                                            @Html.DisplayFor(y => tel.Numero)
                                            <a href="#" class="pl-1">
                                                <i class="fas fa-ellipsis-h" data-ide="@tel.IdProveedor"></i>
                                            </a>
                                        </label>
                                    }
                                }
                            </td>
                            <td class="px-3">
                                <label class="col-form-label">
                                    @Html.DisplayFor(x => item.Correo)
                                </label>
                            </td>
                            @if(item.Estado == 1){
                                <td>
                                    <div class="col-form-label custom-control custom-switch">
                                        <input type="checkbox" class="custom-control-input" id="@item.Id" checked>
                                        <label class="custom-control-label" for="@item.Id">Activo</label>
                                    </div>
                                </td>
                            }else{
                                if(item.Estado == 0){
                                    <td>
                                        <div class="col-form-label custom-control custom-switch">
                                            <input type="checkbox" class="custom-control-input" id="@item.Id">
                                            <label class="custom-control-label" for="@item.Id">Inactivo</label>
                                        </div>
                                    </td>
                                }else{
                                    <td></td>
                                }
                            }
                            @if(item.Enlace != "" && item.Enlace != null){
                                <td>
                                    <label class="col-form-label">
                                        <a href="@item.Enlace" target="_blank">
                                            <button class="btn btn-outline-success">Ir</button>
                                        </a>
                                    </label>
                                </td>
                            }else{
                                <td></td>
                            }
                            <td>
                                <label class="col-form-label">
                                    <a class="btn btn-outline-success" asp-page="/Proveedores/ModificarProveedor" asp-route-id="@item.Id">
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                </label>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <form method="post">
            <input type="text" id="Id" hidden>
            <input type="text" id="Estado" hidden>
        </form>
        <div class="row">
            <div class="col offset-5">
                <nav aria-label="Paginacion ">
                    <ul class="pagination">
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Anterior</span>
                            </a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Siguiente</span>
                        </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- End Datatables -->
@section modal
{
<div class="modal fade" id="tefonosModal" tabindex="-1" role="dialog" aria-labelledby="companiaModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="companiaModalLabel">Lista Telefonos</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalCuerpo">
            </div>
        </div>
    </div>
</div>
}
@section Scripts
{
    <link href="~/selectric/src/selectric.css" rel="stylesheet">
    <script src="~/selectric/src/jquery.selectric.js"></script>
    <script>
        $(function() {
            $('select').selectric();
        });
    </script>
    <script>
        var InputCheck = document.getElementsByClassName("custom-control-input");
        console.log(InputCheck);
        for( var i = 0 ; i < InputCheck.length ; i++ )
        {
            InputCheck[i].addEventListener("click", procesar);
        }
        var iTel = document.getElementsByClassName("fa-ellipsis-h");
        for( var i = 0 ; i < iTel.length ; i++ ){
            iTel[i].addEventListener("click", procesarTel);
        }
        function procesar(e) {
            var Check = e.currentTarget;
            console.log(Check);
            var Label = Check.nextElementSibling;
            if(Check.checked){
                OnActivo(Check.id, Label, 1);
            }else{
                OnActivo(Check.id, Label, 0);
            }
        }
        function OnActivo(id, label, estado){
            var xhttp = new XMLHttpRequest();
            xhttp.onreadystatechange = function() {
                if (this.readyState == 4 && this.status == 200) {
                    if(estado == 1){
                        label.innerHTML = "Activo";
                    }else{
                        label.innerHTML = "Inactivo";
                    }
                }
            };
            xhttp.open("POST", "ListaProveedor", true);
            xhttp.setRequestHeader("Content-type", "application/x-www-form-urlencoded");
            var inputToken = document.getElementsByName("__RequestVerificationToken");
            xhttp.setRequestHeader("RequestVerificationToken", inputToken[0].value);
            xhttp.send("id="+id+"&estado="+estado);
        }
        function invMod(){
            var iModTel = document.getElementsByClassName("btn-outline-warning");
            console.log(iModTel);
            for(var i = 0 ; i < iModTel.length ; i++){
                iModTel[i].addEventListener("click", modTel);
            }
        }
        function modTel(e){
            var iSel = e.currentTarget;
            console.log(iSel);
            var inputSel = document.getElementById(iSel.firstElementChild.getAttribute("data-tid"));
            console.log(inputSel);
            inputSel.removeAttribute("disabled");
        }
        function procesarTel(e){
            var iItem = e.currentTarget;
            var xhttp = new XMLHttpRequest();
            xhttp.onreadystatechange = function() {
                if (this.readyState == 4 && this.status == 200) {
                    document.getElementById("modalCuerpo").innerHTML = this.responseText;
                    $('#tefonosModal').modal('show');
                    invMod();
                }
            };
            xhttp.open("POST", "ListaProveedor?handler=Telefono", true);
            xhttp.setRequestHeader("Content-type", "application/x-www-form-urlencoded");
            var inputToken = document.getElementsByName("__RequestVerificationToken");
            xhttp.setRequestHeader("RequestVerificationToken", inputToken[0].value);
            xhttp.send("IdProveedor="+iItem.getAttribute("data-ide"));
        }
    </script>
}