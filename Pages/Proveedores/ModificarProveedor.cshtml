@page
@model Proveedores.ModificarProveedorModel

@{
    ViewData["Title"] = "Modificaci√≥n de Proveedor";
}

@section Scripts{
    <link href="~/vendor/jquery-selectric/selectric.css" rel="stylesheet">
    <script>
        $(function() {
            $('select').selectric();
        });
        $('#dynamic').selectric();
        $('#bt_add_val').click(function() {
            // Store the value in a variable
            var value = $('#add_val').val();
            // Append to original select
            $('#dynamic').append('<option selected>' + (value ? value : 'Empty') + '</option>');
            // Refresh Selectric
            $('#dynamic').selectric('refresh');
        });
    </script>
}

<div class="pt-5">
    <form class="bg-gray-200 col-lg-10 offset-lg-1 rounded py-5" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Proveedor.Id" />
        <div class="row">
            <label asp-for="Proveedor.Nombre" class="col-sm-1 offset-2 col-form-label font-weight-bold"></label>
            <div class="form-group col-sm-6">
                <input type="text" class="form-control form-control-user mb-2" asp-for="Proveedor.Nombre" placeholder="Ingrese un nombre">
                <span class="text-warning" asp-validation-for="Proveedor.Nombre"></span>
            </div>
        </div>
        <div class="row">
            <label asp-for="Proveedor.Correo" class="col-sm-1 offset-2 col-form-label font-weight-bold"></label>
            <div class="form-group col-sm-6">
                <input type="email" class="form-control form-control-user mb-2" asp-for="Proveedor.Correo" placeholder="ejemplo@dominio.com">
                <span class="" asp-validation-for="Proveedor.Correo"></span>
            </div>
        </div>
        <div class="row">
            <label asp-for="Proveedor.Telefono" class="col-sm-1 offset-2 col-form-label font-weight-bold"></label>
            <div class="form-group col-sm-6">
                <select id="dynamic">
                    <option value="">Seleccione...</option>
                </select>
            </div>
        </div>
        <div class="row">
            <span class="col-sm-1 offset-2"></span>
            <div class="row form-group col-sm-6">
                <input type="text" class="form-control offset-1 col-lg-7" id="add_val" name="add_val">
                <button id="bt_add_val" type="button" class="btn btn-outline-success ml-2"><i class="fas fa-plus"></i> Agregar</button>
            </div>
        </div>
        <div class="row">
            <label asp-for="Proveedor.Direccion" class="col-sm-1 offset-2 col-form-label font-weight-bold"></label>
            <div class="form-group col-sm-6">
                <textarea class="form-control form-control-user mb-2" asp-for="Proveedor.Direccion" placeholder="4ta, avenida norte..."></textarea>
                <span class="" asp-validation-for="Proveedor.Direccion"></span>
            </div>
        </div>
        <div class="row">
            <label asp-for="Proveedor.Enlace" class="col-sm-1 offset-2 col-form-label font-weight-bold"></label>
            <div class="form-group col-sm-6">
                <input class="form-control form-control-user mb-2" asp-for="Proveedor.Enlace" placeholder="www.ejemplo.com">
                <span class="" asp-validation-for="Proveedor.Enlace"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 offset-md-4">
                <button type="submit" class="btn btn-outline-primary"><i class="fas fa-save"></i> Guardar Cambios</button>
            </div>
        </div>
    </form>
</div>