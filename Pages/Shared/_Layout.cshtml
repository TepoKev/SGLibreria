<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>
        @ViewData["Title"] - SGLibreria
    </title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="robots" content="all,follow">
    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="~/css/styles.css" rel="stylesheet">
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav sidebar sidebar-dark accordion" id="accordionSidebar">
            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" asp-page="/Index" style="background-color: #28CC9E">
                <div class="sidebar-brand-icon rotate-n-15">
                    <img width="75" height="75" src="/img/logov1.png"/>
                </div>
                <div class="sidebar-brand-text mx-3">SGLibreria</div>
            </a>
            <!-- Divider -->
            <hr class="sidebar-divider my-0">
            <!-- Nav Item - Dashboard -->
            <li class="nav-item active">
                <a class="nav-link" asp-page="/Index">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>
                        Inicio
                    </span>
                </a>
            </li>
            <!-- Divider -->
            <hr class="sidebar-divider">
            <!-- Heading -->
            <div class="sidebar-heading">
                Secciones
            </div>
            <!-- Nav Item - Pages Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseForVentas" aria-expanded="true" aria-controls="collapseThree">
                    <i class="fas fa-shopping-cart"></i>
                    <span>Ventas</span>
                </a>
                <div id="collapseForVentas" class="collapse" aria-labelledby="headingThree" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Lista de Opciones:</h6>
                        <a class="collapse-item" asp-page="/Ventas/RegistroVentamd"><i class="fas fa-plus"></i> Registrar</a>
                        <a class="collapse-item" asp-page="/Ventas/ListaVenta"><i class="fas fa-list-alt"></i> Lista</a>
                    </div>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseForCompras" aria-expanded="true" aria-controls="collapseTwo">
                    <i class="fas fa-store-alt"></i>
                    <span>Compras</span>
                </a>
                <div id="collapseForCompras" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Lista de Opciones:</h6>
                        <a class="collapse-item" asp-page="/Compras/RegistroCompra"><i class="fas fa-plus"></i> Registrar</a>
                        <a class="collapse-item" asp-page="/Compras/ListaCompra"><i class="fas fa-list-alt"></i> Lista</a>
                    </div>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseForProveedores" aria-expanded="true" aria-controls="collapseOne">
                    <i class="far fa-address-card"></i>
                    <span>Proveedores</span>
                </a>
                <div id="collapseForProveedores" class="collapse" aria-labelledby="headingOne" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Lista de Opciones:</h6>
                        <a class="collapse-item" asp-page="/Proveedores/RegistroProveedor"><i class="fas fa-plus"></i> Registrar</a>
                        <a class="collapse-item" asp-page="/Proveedores/ListaProveedor"><i class="fas fa-list-alt"></i> Lista</a>
                    </div>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseForProductos" aria-expanded="true" aria-controls="collapseFor">
                    <i class="fab fa-product-hunt"></i>
                    <span>Productos</span>
                </a>
                <div id="collapseForProductos" class="collapse" aria-labelledby="headingFor" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Lista de Opciones:</h6>
                        <a class="collapse-item" asp-page="/Productos/ListaProducto"><i class="fas fa-list-alt"></i> Lista</a>
                    </div>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseForServicios" aria-expanded="true" aria-controls="collapseForServicios">
                    <i class="fas fa-print"></i><i class="ml-0 fas fa-phone"></i>
                    <span>Servicios</span>
                </a>
                <div id="collapseForServicios" class="collapse" aria-labelledby="headingFive" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Lista de Opciones:</h6>
                        <a class="collapse-item" asp-page="/Servicios/RegistroServicio"><i class="fas fa-plus"></i> Registrar</a>
                        <a class="collapse-item" asp-page="/Servicios/ListaServicio"><i class="fas fa-list-alt"></i> Lista</a>
                    </div>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseOfertas" aria-expanded="true" aria-controls="collapseCategorias">
                    <i class="fas fa-tag"></i>
                    <span>Ofertas</span>
                </a>
                <div id="collapseOfertas" class="collapse" aria-labelledby="headingOferta" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Lista de Opciones:</h6>
                        <a class="collapse-item" asp-page="/Ofertas/RegistroOferta"><i class="fas fa-plus"></i> Registrar</a>
                        <a class="collapse-item" asp-page="/Ofertas/ListaOferta"><i class="fas fa-list-alt"></i> Lista</a>
                    </div>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseCategorias" aria-expanded="true" aria-controls="collapseCategorias">
                    <i class="fas fa-layer-group"></i>
                    <span>Categorias</span>
                </a>
                <div id="collapseCategorias" class="collapse" aria-labelledby="headingCategorias" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Lista de Opciones:</h6>
                        <a class="collapse-item" asp-page="/Categorias/RegistroCategoria"><i class="fas fa-plus"></i> Registrar</a>
                        <a class="collapse-item" asp-page="/Categorias/ListaCategoria"><i class="fas fa-list-alt"></i> Lista</a>
                    </div>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseEmpleados" aria-expanded="true" aria-controls="collapseEmpleados">
                    <i class="fas fa-users"></i>
                    <span>Empleados</span>
                </a>
                <div id="collapseEmpleados" class="collapse" aria-labelledby="headingEmpleados" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Lista de Opciones:</h6>
                        <a class="collapse-item" asp-page="/Empleados/RegistroEmpleado"><i class="fas fa-plus"></i> Registrar</a>
                        <a class="collapse-item" asp-page="/Empleados/ListaEmpleado"><i class="fas fa-list-alt"></i> Lista</a>
                    </div>
                </div>
            </li>
            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline mt-2">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>
        </ul>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light topbar mb-4 static-top shadow border-left" style="background-color: #28CC9E">
                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3"><i class="fa fa-bars"></i></button>
                        <h1 class="h3 mb-0 text-white" id="titulo">@ViewData["Title"]</h1>
                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">
                        <!-- Nav Item - Search Dropdown (Visible Only XS) -->
                        <li class="nav-item dropdown no-arrow d-sm-none">
                            <a class="nav-link dropdown-toggle" href="#" id="searchDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-search fa-fw"></i>
                            </a>
                            <!-- Dropdown - Messages -->
                            <div class="dropdown-menu dropdown-menu-right p-3 shadow animated--grow-in" aria-labelledby="searchDropdown">
                                <form class="form-inline mr-auto w-100 navbar-search">
                                    <div class="input-group">
                                        <input type="text" class="form-control bg-light border-0 small" placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2">
                                        <div class="input-group-append">
                                            <button class="btn btn-primary" type="button"><i class="fas fa-search fa-sm"></i></button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </li>
                        <!-- Nav Item - Alerts -->
                        <li class="nav-item dropdown no-arrow mx-1">
                            <a class="nav-link dropdown-toggle" href="#" id="alertsDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" title="Notificaciones">
                                <i class="fas fa-bell fa-fw text-white"></i>
                                <!-- Counter - Alerts -->
                                <span class="badge badge-danger badge-counter">3+</span>
                            </a>
                            <!-- Dropdown - Alerts -->
                            <div class="dropdown-list dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="alertsDropdown">
                                <h6 class="dropdown-header">
                                    Notificaciones
                                </h6>
                                <a class="dropdown-item d-flex align-items-center" href="#">
                                    <div class="mr-3">
                                            <i class=""> <img src="/Productos/borradores.jpg" alt="..." width="70px"></i>
                                    </div>
                                    <div>
                                        <div class="small text-gray-500">Próximo a agotarse</div>
                                        <span class="font-weight-bold">Borrador <span class="badge badge-danger">10</span> </span>
                                    </div>
                                </a>
                                <a class="dropdown-item d-flex align-items-center" href="#">
                                    <div class="mr-3">
                                            <i class=""> <img src="/Productos/lapiceros.jpg" alt="..." width="70px"></i>
                                    </div>
                                    <div>
                                        <div class="small text-gray-500">Próximo a agotarse</div>
                                        <span class="font-weight-bold">Lapiceros <span class="badge badge-danger">10</span> </span>
                                    </div>
                                </a>
                                <a class="dropdown-item d-flex align-items-center" href="#">
                                    <div class="mr-3">
                                            <i class=""> <img src="/Productos/zacapuntas.jpg" alt="..." width="70px"></i>                                        
                                    </div>
                                    <div>
                                        <div class="small text-gray-500">Próximo a agotarse</div>
                                        <span class="font-weight-bold">Sacapuntas <span class="badge badge-danger">10</span> </span>
                                    </div>
                                </a>
                                <a class="dropdown-item text-center small text-gray-500" href="#">Mostrar todas las notificaciones</a>
                            </div>
                        </li>
                        <!-- Nav Item - Messages -->
                        <li class="nav-item dropdown no-arrow mx-1">
                            <a class="nav-link dropdown-toggle" href="#" id="messagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" title="Informaión">
                                <i class="fas fa-info-circle  text-white"></i>
                            </a>
                            <!-- Dropdown - User Information -->
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="#" data-toggle="modal" data-target="#modalAcercade" >
                                    <i class="fas fa-users fa-sm fa-fw mr-2 text-gray-500"></i> Acerca de
                                </a>
                                <a class="dropdown-item" href="#">
                                    <i class="fas fa-question-circle fa-sm fa-fw mr-2 text-gray-400"></i> Ayuda
                                </a>
                            </div>
                        </li>
                        <!--Inicia Model-->
                        <div class="user" method="post">
                            <div class="modal fade" id="modalAcercade" tabindex="-1" role="dialog"
                                aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
                                <div class="modal-dialog modal-lg">
                                    <div class="modal-content">
                                        <!-- Modal Header -->
                                        <div class="modal-header bg-primary text-white">
                                            <h4 class="modal-title">Acerca de</h4>
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        </div>
                                        <!-- Modal body -->
                                        <div class="modal-body">
                                            Sistema Informático para el control de compra-venta en la libreria de la Universidad Panamericana, San Vicente
                                        </div>
                                        <!-- Modal footer -->
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-outline-secondary" data-dismiss="modal" id="btnCerrar"><i class="fas fa-times-circle"></i> Cerrar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--Fin del Modal-->
                        <div class="topbar-divider d-none d-sm-block"></div>
                        <!-- Nav Item - User Information -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="mr-2 d-none d-lg-inline small text-white">Kevin Durán</span>
                                <img class="img-profile rounded-circle" src="~/img/img1.jpg">
                            </a>
                            <!-- Dropdown - User Information -->
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="/Perfil">
                                    <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i> Perfil
                                </a>
                                <a class="dropdown-item" href="/Seguridad">
                                    <i class="fas fa-cogs fa-sm fa-fw mr-2 text-gray-400"></i> Seguridad
                                </a>
                                <a class="dropdown-item" href="/MiActividad">
                                    <i class="fas fa-list fa-sm fa-fw mr-2 text-gray-400"></i> Registro de Actividad
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/Login">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i> Cerrar Sesión
                                </a>
                            </div>
                        </li>
                    </ul>
                </nav>

                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <partial name="_CookieConsentPartial" />
                    <main role="main" class="pb-3 position-relative">
                        @RenderBody()
                    </main>
                </div>
            </div>
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Universidad de El Salvador - FMP 2019</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->
        </div>
    </div>
    @RenderSection("modal", required: false)
    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
