@model Proveedores.ListaProveedorModel
<div class="table-responsive pt-3">
    <table class="table table-sm table-hover bg-white" cellspacing="0">
        <thead class="thead-dark">
            <tr>
                <th>Numero</th>
                <th>Principal</th>
                <th>Modificar</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var tel in Model.Telefonos){
            <tr>
                <td>
                    <input type="text" class="form-control" value="@tel.Numero" id="t @tel.Id" disabled>
                </td>
                @if(tel.Principal == 1){
                <td>
                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="t @tel.Id" checked>
                        <label class="custom-control-label" for="t @tel.Id">Activo</label>
                    </div>
                </td>
                }else{
                <td>
                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="t @tel.Id">
                        <label class="custom-control-label" for="t @tel.Id">Inactivo</label>
                    </div>
                </td>
                }
                <td>
                    <a class="btn btn-outline-warning ml-3" href="#">
                        <i class="fas fa-pencil-alt" data-tid="t @tel.Id"></i>
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>