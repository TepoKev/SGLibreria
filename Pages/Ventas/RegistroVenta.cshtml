                <label class="custom-control-label" for="customCheck6"><span class="badge badge-pill badge-info">Calculadoras</span></label>
              </div>
            </div>
            <div class="row pt-3">
              <div class="col">
                <div class="card" style="width: 10rem; height: 18rem;">
                  <img src="https://www.hoptoys.es/30680-tm_thickbox_default/lapices-de-colores-jumbo-grip-x-12.jpg" class="card-img-top" alt="..." style="width: 125px; height: 125px;">
                  <div class="card-body">
                    <span class="h5">Lapiz</span>
                    <p class="card-text">Variedad de lapices muchos colores.</p>
                    <div class="row">
                      <div class="col"><label>Cantidad </label></div>
                      <div class="col"><input type="number" class="form-control col-lg-6" value="1"></div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col">
                <div class="card" style="width: 10rem; height: 18rem;">
                  <img src="http://www.cotesudshop.com/wp-content/uploads/2019/04/cuaderno-l-rosa-1-1.jpg" alt="..." style="width: 125px; height: 125px;">
                  <div class="card-body">
                    <span class="h5">Cuaderno</span>
                    <p class="card-text">Cuaderno L lila.</p>
                    <div class="row">
                      <div class="col"><label>Cantidad </label></div>
                      <div class="col"><input type="number" class="form-control col-lg-6" value="1"></div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col">
                <div class="card" style="width: 10rem; height: 18rem;">
                  <img src="https://www.misutiles.com/4296-thickbox_default/sacapunta-1-cuchilla.jpg" alt="..." style="width: 125px; height: 125px;">
                  <div class="card-body">
                    <span class="h5">Saca Punta</span>
                    <p class="card-text">Sacapunta color azul.</p>
                    <div class="row">
                      <div class="col"><label>Cantidad </label></div>
                      <div class="col"><input type="number" class="form-control col-lg-6" value="1"></div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col">
                <div class="card" style="width: 10rem; height: 18rem;">
                  <img src="https://lapape.ec/wp-content/uploads/2018/06/BORRADOR-BLANCO-PZ20-PELIKAN.jpg" alt="..." style="width: 125px; height: 125px;">
                  <div class="card-body">
                    <span class="h5">Borrador</span>
                    <p class="card-text">Borrador marca pelikan.</p>
                    <div class="row">
                      <div class="col"><label>Cantidad </label></div>
                      <div class="col"><input type="number" class="form-control col-lg-6" value="1"></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</form>

<script>
  var doc = document;
  var elementdiv = doc.getElementsByClassName("search-box");
  for(var i = 0 ; i < elementdiv.length ; i++ )
  {
    elementdiv[i].addEventListener("mouseout", divout);
    elementdiv[i].addEventListener("mouseover", divhover);
  }

  function divhover(event){
    var target = null;
    if(event.target.className == "search-box"){
      target = event.target;
    }else{
      return;
    }
    console.log("TargetHov:");
    console.log(target);
    var inputs = target.getElementsByClassName("search-txt");
    if(inputs.length > 0) {
      inputs[0].focus();
    }
  }

  function divout(event){
    var target = null;
    if(event.target.className == "search-box"){
      target = event.target;
    }else{
      return;
    }
    console.log("TargetOut:");
    console.log(target);
    var inputs = target.getElementsByClassName("search-txt");
    if(inputs.length > 0) {
      inputs[0].blur();
    }
  }
</script>