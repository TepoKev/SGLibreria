@page
@model Ventas.RegistroVentaModel

@{
    ViewData["Title"] = "Registro Venta";
}

<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="products-tab" data-toggle="tab" href="#products" role="tab" aria-controls="products" aria-selected="true">Productos</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="services-tab" data-toggle="tab" href="#services" role="tab" aria-controls="services" aria-selected="false">Servicios</a>
  </li>
</ul>
<form>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="products" role="tabpanel" aria-labelledby="products-tab">
      <div class="bg-white m-4 px-4 pt-2 pb-2 rounded">
        <label>Datos del Cliente</label>
        <div class="m-2 py-2 bg-light rounded">
          <div class="row p-2">
            <div class="col">
              <label>Nombre</label>
              <input type="text" class="form-control bg-white" name="Nombre" placeholder="Nombre completo">
            </div>
            <div class="col">
              <label>NIT</label>
              <input type="text" class="form-control bg-white" name="Nit" placeholder="####-######-###-#">
            </div>
          </div>
          <div class="row p-2">
            <div class="col">
              <label>Dirección</label>
              <textarea class="form-control bg-white" name="Direccion" placeholder="Dirección"></textarea>
            </div>
          </div>
        </div>
      </div>
      <div class="bg-white m-4 px-4 pt-2 pb-2 rounded">
        <label>Datos de la Venta</label>
        <div class="m-2 py-2 bg-light rounded">
          <div class="row p-2">
            <div class="col-md-3">
              <label>Fecha de la venta: </label>
              <input type="date" name="FechaVenta" class="form-control bg-white" placeholder="dd/mm/yyyy">
            </div>
            <div class="col-md-3 offset-md-6">
              <label>Monto Total:</label>
              <label class="text-success font-weight-bold">$2.00</label>
            </div>
          </div>
          <div class="row p-2">
            <div class="col">
              <label>Lista de Productos</label>
            </div>
            <div class="col text-right">
              <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target=".bd-producto-modal-lg" name="AgregarProducto"><i class="fas fa-plus"></i> Agregar productos</button>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <table class="table table-sm table-hover bg-white" name="TablaVenta">
                <thead class="thead-dark">
                  <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Cantidad</th>
                    <th scope="col">Precio Unitario</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>Cuaderno Scribe</td>
                    <td><input type="number" class="form-control col-lg-3" value="1" name="cantidad"></td>
                    <td>$1</td>
                  </tr>
                  <tr>
                    <td>Lapiz Bic</td>
                    <td><input type="number" class="form-control col-lg-3" value="1" name="cantidad"></td>
                    <td>$0.25</td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="tab-pane fade" id="services" role="tabpanel" aria-labelledby="services-tab">
      ...
    </div>
  </div>
  <div class="modal fade bd-producto-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="myLargeModalLabel">Productos</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">
          <form class="form-inline">
            <div class="row pb-2">
              <!-- <div class="col">
                <input class="form-control mr-sm-2" type="search" placeholder="Buscar..." aria-label="Search">
              </div>
              <div class="col">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="fas fa-search"></i> Buscar</button>
              </div> -->
              <div class="search-box">
                  <input type="text" class="search-txt" placeholder="Buscar..."/>
                  <a class="search-btn" href="#">
                      <i class="fas fa-search"></i>
                  </a>
              </div>
            </div>
            <div class="row pt-3 px-5 pt-5">
              <div class="col">
                <input type="checkbox" class="custom-control-input" id="customCheck1">
                <label class="custom-control-label" for="customCheck1"><span class="badge badge-pill badge-primary">Lapices</span></label>
              </div>
              <div class="col">
                <input type="checkbox" class="custom-control-input" id="customCheck2">
                <label class="custom-control-label" for="customCheck2"><span class="badge badge-pill badge-secondary">Cuadernos</span></label>
              </div>
              <div class="col">
                <input type="checkbox" class="custom-control-input" id="customCheck3">
