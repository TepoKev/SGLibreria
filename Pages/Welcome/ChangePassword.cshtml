@page
@model ChangePasswordModel
@{
    Layout = "_Login";
}
<div class="row bg-login-image bg-login-image-custom">
    <div class="col-lg-4 d-none d-lg-block"></div>
    <div class="col-lg-8" style="background-color:rgba(0,0,0,.5)">
        <div class="p-5">
            <div class="text-center">
                <h1 class="h4 text-white mb-4">¡Cambio de contraseña!</h1>
            </div>
            <form class="user" method="post">
                @if(Model.Mensaje!=null && Model.Mensaje!="") {
                    <div class="form-group font-weight-bold text-danger">
                        @Model.Mensaje
                    </div>
                }
                <div class="form-group">
                    <input type="password" name="Clave"
                    class="form-control form-control-login form-control-user" id="usuario"
                        aria-describedby="emailHelp" placeholder="Nueva contraseña">
                </div>
                <div class="form-group">
                    <input type="password" name="Reclave" class="form-control form-control-login form-control-user" id="clave"
                        placeholder="Reescriba nueva contraseña">
                </div>
                <div class="btn-group">
                    <button asp-page-handler="CancelProcess"class="btn btn-danger btn-user" type="submit">
                        <i class="fas fa-times"></i> Cancelar proceso de recuperación
                    </button>
                    <button  class="btn btn-primary btn-user" type="submit">
                        <i class="fas fa-lock"></i> Cambiar mi contraseña ahora
                    </button>

                </div>
           </form>
            <hr>
            <div class="text-center">
                <a class="small text-white" href="/Welcome/ForgetPassword"><i class="fas fa-arrow-left"></i> Regresar</a>
            </div>
        </div>
    </div>
</div>